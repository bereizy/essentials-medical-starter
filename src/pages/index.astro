---
import { Navbar, Hero, ServicesGrid, ContactForm, Footer, CalendlyWidget, ProviderBio } from "@indirecttek/essentials-engine";
import { siteConfig } from "../config/siteConfig";
import "../styles/global.css";

// Generate structured data for SEO (Dental Practice schema)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Dentist",
  "name": siteConfig.businessName,
  "description": siteConfig.seo.description,
  "telephone": siteConfig.contactInfo.phone,
  "email": siteConfig.contactInfo.email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": siteConfig.contactInfo.address,
  },
  "openingHours": siteConfig.medical?.officeHours,
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "127"
  },
  "priceRange": "$$"
};

const provider = siteConfig.medical?.providers?.[0];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{siteConfig.seo.title}</title>
    <meta name="title" content={siteConfig.seo.title} />
    <meta name="description" content={siteConfig.seo.description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={siteConfig.seo.title} />
    <meta property="og:description" content={siteConfig.seo.description} />
    <meta property="og:image" content={siteConfig.heroSection.imageUrl} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={siteConfig.seo.title} />
    <meta property="twitter:description" content={siteConfig.seo.description} />
    <meta property="twitter:image" content={siteConfig.heroSection.imageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Google Fonts - Elegant Serif + Clean Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <style>
      .font-serif { font-family: 'Playfair Display', Georgia, serif; }
      .font-sans { font-family: 'Inter', system-ui, sans-serif; }
    </style>
  </head>

  <body
    class="bg-[color:var(--color-background)] text-[color:var(--color-foreground)] min-h-screen antialiased font-sans"
    style={`
      --color-primary: ${siteConfig.theme.primary};
      --color-secondary: ${siteConfig.theme.secondary};
      --color-accent: ${siteConfig.theme.accent};
      --color-background: ${siteConfig.theme.background};
      --color-foreground: ${siteConfig.theme.foreground};
    `}
  >
    <!-- Elegant Navbar -->
    <header class="bg-white/95 backdrop-blur-sm shadow-sm sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 bg-[color:var(--color-primary)] rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <span class="font-serif text-xl font-semibold text-[color:var(--color-foreground)]">{siteConfig.businessName}</span>
          </a>
          <nav class="hidden md:flex items-center gap-8">
            <a href="#about" class="text-[color:var(--color-foreground)]/70 hover:text-[color:var(--color-primary)] transition-colors">About</a>
            <a href="#services" class="text-[color:var(--color-foreground)]/70 hover:text-[color:var(--color-primary)] transition-colors">Services</a>
            <a href="#schedule" class="text-[color:var(--color-foreground)]/70 hover:text-[color:var(--color-primary)] transition-colors">Schedule</a>
            <a href="#location" class="text-[color:var(--color-foreground)]/70 hover:text-[color:var(--color-primary)] transition-colors">Location</a>
            <a href="#contact" class="text-[color:var(--color-foreground)]/70 hover:text-[color:var(--color-primary)] transition-colors">Contact</a>
          </nav>
          <a
            href="#schedule"
            class="hidden md:inline-flex items-center gap-2 bg-[color:var(--color-primary)] text-white px-5 py-2.5 rounded-full font-medium hover:bg-[color:var(--color-secondary)] transition-colors"
          >
            Request Appointment
          </a>
        </div>
      </div>
    </header>

    <main>
      <!-- Elegant Hero Section -->
      <section class="relative bg-gradient-to-b from-white to-[color:var(--color-background)] py-16 md:py-24">
        <div class="max-w-7xl mx-auto px-4">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="order-2 md:order-1">
              <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold text-[color:var(--color-foreground)] leading-tight mb-6">
                {siteConfig.heroSection.headline}
              </h1>
              <p class="text-lg md:text-xl text-[color:var(--color-foreground)]/70 leading-relaxed mb-8">
                {siteConfig.heroSection.subheadline}
              </p>
              <div class="flex flex-col sm:flex-row gap-4">
                <a
                  href="#schedule"
                  class="inline-flex items-center justify-center gap-2 bg-[color:var(--color-primary)] text-white px-8 py-4 rounded-full font-semibold hover:bg-[color:var(--color-secondary)] transition-colors text-lg"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {siteConfig.heroSection.callToActionLabel}
                </a>
                <a
                  href={`tel:${siteConfig.contactInfo.phone}`}
                  class="inline-flex items-center justify-center gap-2 border-2 border-[color:var(--color-primary)] text-[color:var(--color-primary)] px-8 py-4 rounded-full font-semibold hover:bg-[color:var(--color-primary)] hover:text-white transition-colors text-lg"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  {siteConfig.contactInfo.phone}
                </a>
              </div>
            </div>
            <div class="order-1 md:order-2">
              <div class="relative">
                <img
                  src={siteConfig.heroSection.imageUrl}
                  alt={siteConfig.heroSection.imageAlt}
                  class="w-full rounded-3xl shadow-2xl"
                />
                <!-- Accent decoration -->
                <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-[color:var(--color-accent)]/20 rounded-full -z-10"></div>
                <div class="absolute -top-4 -left-4 w-24 h-24 bg-[color:var(--color-primary)]/10 rounded-full -z-10"></div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Trust Indicators -->
      <section class="py-8 bg-white border-y border-gray-100">
        <div class="max-w-7xl mx-auto px-4">
          <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 text-center">
            <div>
              <div class="text-3xl font-serif font-bold text-[color:var(--color-primary)]">15+</div>
              <div class="text-sm text-[color:var(--color-foreground)]/60">Years Experience</div>
            </div>
            <div>
              <div class="text-3xl font-serif font-bold text-[color:var(--color-primary)]">5,000+</div>
              <div class="text-sm text-[color:var(--color-foreground)]/60">Happy Patients</div>
            </div>
            <div>
              <div class="flex items-center justify-center gap-1 text-3xl font-serif font-bold text-[color:var(--color-primary)]">
                4.9
                <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </div>
              <div class="text-sm text-[color:var(--color-foreground)]/60">Google Rating</div>
            </div>
            <div>
              <div class="text-3xl font-serif font-bold text-[color:var(--color-primary)]">Same Day</div>
              <div class="text-sm text-[color:var(--color-foreground)]/60">Emergency Care</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Meet Your Dentist Section -->
      {provider && (
        <section id="about" class="py-16 md:py-24 bg-white">
          <div class="max-w-7xl mx-auto px-4">
            <div class="text-center mb-12">
              <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
                Meet Your Dentist
              </h2>
              <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
                Compassionate care from a provider who truly cares about your smile
              </p>
            </div>

            <div class="bg-[color:var(--color-background)] rounded-3xl overflow-hidden shadow-lg">
              <div class="md:flex">
                <div class="md:w-2/5">
                  <img
                    src={provider.imageUrl}
                    alt={`${provider.name}, ${provider.title}`}
                    class="w-full h-80 md:h-full object-cover"
                  />
                </div>
                <div class="md:w-3/5 p-8 md:p-12">
                  <h3 class="font-serif text-2xl md:text-3xl font-bold text-[color:var(--color-primary)] mb-2">
                    {provider.name}, {provider.title}
                  </h3>
                  {provider.specialty && (
                    <p class="text-lg text-[color:var(--color-accent)] font-medium mb-6">
                      {provider.specialty}
                    </p>
                  )}
                  <p class="text-[color:var(--color-foreground)]/80 leading-relaxed mb-8 text-lg">
                    {provider.bio}
                  </p>
                  {provider.credentials && (
                    <div class="border-t border-gray-200 pt-6">
                      <h4 class="text-sm font-semibold text-[color:var(--color-foreground)]/60 uppercase tracking-wide mb-4">
                        Education & Credentials
                      </h4>
                      <ul class="grid sm:grid-cols-2 gap-3">
                        {provider.credentials.map((credential: string) => (
                          <li class="flex items-start gap-2 text-[color:var(--color-foreground)]/70">
                            <svg class="w-5 h-5 text-[color:var(--color-primary)] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            {credential}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </section>
      )}

      <!-- Services Section -->
      <section id="services" class="py-16 md:py-24 bg-[color:var(--color-background)]">
        <div class="max-w-7xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
              Our Services
            </h2>
            <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
              Comprehensive dental care for your entire family
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {siteConfig.services.map((service) => (
              <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-[color:var(--color-primary)]/10 rounded-xl flex items-center justify-center mb-6">
                  <svg class="w-6 h-6 text-[color:var(--color-primary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h3 class="font-serif text-xl font-bold text-[color:var(--color-foreground)] mb-3">
                  {service.name}
                </h3>
                <p class="text-[color:var(--color-foreground)]/70 leading-relaxed">
                  {service.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Testimonials Section -->
      <section class="py-16 md:py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
              What Our Patients Say
            </h2>
            <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
              Don't just take our word for it ‚Äî hear from families who trust us with their smiles
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-[color:var(--color-background)] rounded-2xl p-8 relative">
              <div class="absolute -top-4 left-8 text-6xl font-serif text-[color:var(--color-primary)]/20">"</div>
              <blockquote class="text-[color:var(--color-foreground)]/80 italic leading-relaxed mb-6 pt-4">
                I've always been nervous about the dentist, but Dr. Mitchell and her team made me feel completely at ease. The office is beautiful and calming. I actually look forward to my appointments now!
              </blockquote>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[color:var(--color-primary)] flex items-center justify-center text-white font-semibold">
                  J
                </div>
                <div>
                  <p class="font-semibold text-[color:var(--color-foreground)]">Jennifer R.</p>
                  <p class="text-sm text-[color:var(--color-foreground)]/60">Raleigh, NC</p>
                </div>
              </div>
            </div>

            <div class="bg-[color:var(--color-background)] rounded-2xl p-8 relative">
              <div class="absolute -top-4 left-8 text-6xl font-serif text-[color:var(--color-primary)]/20">"</div>
              <blockquote class="text-[color:var(--color-foreground)]/80 italic leading-relaxed mb-6 pt-4">
                We bring our whole family here ‚Äî from our 4-year-old to my parents. The staff is incredibly patient with the kids and respectful with the adults. Best dental experience we've ever had.
              </blockquote>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[color:var(--color-secondary)] flex items-center justify-center text-white font-semibold">
                  M
                </div>
                <div>
                  <p class="font-semibold text-[color:var(--color-foreground)]">Michael T.</p>
                  <p class="text-sm text-[color:var(--color-foreground)]/60">Cary, NC</p>
                </div>
              </div>
            </div>

            <div class="bg-[color:var(--color-background)] rounded-2xl p-8 relative">
              <div class="absolute -top-4 left-8 text-6xl font-serif text-[color:var(--color-primary)]/20">"</div>
              <blockquote class="text-[color:var(--color-foreground)]/80 italic leading-relaxed mb-6 pt-4">
                After years of putting off dental work, I finally found a practice where I feel comfortable. Dr. Mitchell was so gentle during my crown procedure ‚Äî I barely felt a thing. Highly recommend!
              </blockquote>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[color:var(--color-accent)] flex items-center justify-center text-white font-semibold">
                  A
                </div>
                <div>
                  <p class="font-semibold text-[color:var(--color-foreground)]">Amanda S.</p>
                  <p class="text-sm text-[color:var(--color-foreground)]/60">Apex, NC</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Schedule Appointment Section -->
      <section id="schedule" class="py-16 md:py-24 bg-white">
        <div class="max-w-5xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
              Schedule Your Visit
            </h2>
            <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
              Book your appointment online in just a few clicks. New patients welcome!
            </p>
          </div>

          <div class="bg-[color:var(--color-background)] rounded-3xl p-8 md:p-12 shadow-lg">
            <div class="text-center">
              <!-- NexHealth Booking Widget -->
              <CalendlyWidget config={siteConfig} inline={true} />
            </div>
          </div>

          <!-- Office Hours & Insurance -->
          <div class="grid md:grid-cols-2 gap-8 mt-12">
            <div class="bg-[color:var(--color-primary)]/5 rounded-2xl p-8">
              <h3 class="font-serif text-xl font-bold text-[color:var(--color-primary)] mb-4 flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Office Hours
              </h3>
              <p class="text-[color:var(--color-foreground)]/70 text-lg">
                {siteConfig.medical?.officeHours}
              </p>
              {siteConfig.medical?.emergencyPhone && (
                <p class="mt-4 text-[color:var(--color-foreground)]/70">
                  <strong>Emergency Line:</strong> {siteConfig.medical.emergencyPhone}
                </p>
              )}
            </div>

            {siteConfig.medical?.acceptedInsurance && (
              <div class="bg-[color:var(--color-accent)]/10 rounded-2xl p-8">
                <h3 class="font-serif text-xl font-bold text-[color:var(--color-primary)] mb-4 flex items-center gap-2">
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  Accepted Insurance
                </h3>
                <div class="flex flex-wrap gap-2">
                  {siteConfig.medical.acceptedInsurance.map((insurance: string) => (
                    <span class="bg-white px-3 py-1 rounded-full text-sm text-[color:var(--color-foreground)]/70">
                      {insurance}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </section>

      <!-- Location Section -->
      <section id="location" class="py-16 md:py-24 bg-[color:var(--color-background)]">
        <div class="max-w-7xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
              Visit Our Office
            </h2>
            <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
              Conveniently located in Raleigh, serving families throughout the Triangle area
            </p>
          </div>

          <div class="grid lg:grid-cols-2 gap-8">
            <!-- Map Placeholder -->
            <div class="order-2 lg:order-1">
              <div class="w-full h-80 lg:h-full min-h-[320px] rounded-2xl flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
                <div class="absolute inset-0 opacity-30">
                  <div class="absolute top-1/4 left-1/4 w-32 h-32 rounded-full border-2 border-gray-400"></div>
                  <div class="absolute bottom-1/3 right-1/4 w-20 h-20 rounded-full border-2 border-gray-400"></div>
                  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-6 h-6 rounded-full bg-[color:var(--color-primary)]"></div>
                </div>
                <div class="text-center z-10 p-6">
                  <div class="text-5xl mb-4">üìç</div>
                  <p class="text-[color:var(--color-foreground)]/60 font-medium mb-4">Interactive Map</p>
                  <a
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(siteConfig.contactInfo.address)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-[color:var(--color-primary)] text-white px-6 py-3 rounded-full font-medium hover:bg-[color:var(--color-secondary)] transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Open in Google Maps
                  </a>
                </div>
              </div>
            </div>

            <!-- Contact Info & Hours -->
            <div class="order-1 lg:order-2 space-y-6">
              <!-- Address Card -->
              <div class="bg-white rounded-2xl p-8 shadow-sm">
                <h3 class="font-serif text-xl font-bold text-[color:var(--color-primary)] mb-6">
                  {siteConfig.businessName}
                </h3>

                <div class="space-y-4 mb-6">
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-[color:var(--color-primary)]/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-[color:var(--color-primary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-[color:var(--color-foreground)]">Address</p>
                      <p class="text-[color:var(--color-foreground)]/70">{siteConfig.contactInfo.address}</p>
                    </div>
                  </div>

                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-[color:var(--color-primary)]/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-[color:var(--color-primary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-[color:var(--color-foreground)]">Phone</p>
                      <a href={`tel:${siteConfig.contactInfo.phone.replace(/[^0-9]/g, '')}`} class="text-[color:var(--color-primary)] hover:underline">
                        {siteConfig.contactInfo.phone}
                      </a>
                    </div>
                  </div>

                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-[color:var(--color-primary)]/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-[color:var(--color-primary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-[color:var(--color-foreground)]">Email</p>
                      <a href={`mailto:${siteConfig.contactInfo.email}`} class="text-[color:var(--color-primary)] hover:underline">
                        {siteConfig.contactInfo.email}
                      </a>
                    </div>
                  </div>
                </div>

                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(siteConfig.contactInfo.address)}`}
