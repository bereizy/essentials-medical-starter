                  class="w-full inline-flex items-center justify-center gap-2 border-2 border-[color:var(--color-primary)] text-[color:var(--color-primary)] px-6 py-3 rounded-full font-medium hover:bg-[color:var(--color-primary)] hover:text-white transition-colors"
                >
