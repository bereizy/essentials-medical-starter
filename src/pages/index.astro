              <!-- Hours Card -->
              <div class="bg-white rounded-2xl p-8 shadow-sm">
                <h3 class="font-serif text-xl font-bold text-[color:var(--color-primary)] mb-6 flex items-center gap-2">
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Office Hours
                </h3>

                <ul class="space-y-3 mb-6">
                  <li class="flex justify-between py-2 border-b border-gray-100">
                    <span class="font-medium text-[color:var(--color-foreground)]">Monday - Friday</span>
                    <span class="text-[color:var(--color-foreground)]/70">8:00 AM - 5:00 PM</span>
                  </li>
                  <li class="flex justify-between py-2 border-b border-gray-100">
                    <span class="font-medium text-[color:var(--color-foreground)]">Saturday</span>
                    <span class="text-[color:var(--color-foreground)]/70">9:00 AM - 2:00 PM</span>
                  </li>
                  <li class="flex justify-between py-2 text-[color:var(--color-foreground)]/50">
                    <span class="font-medium">Sunday</span>
                    <span>Closed</span>
                  </li>
                </ul>

                <div class="p-4 rounded-xl bg-[color:var(--color-accent)]/10">
                  <p class="text-sm text-[color:var(--color-foreground)] flex items-center gap-2">
                    <span class="text-lg">‚ö°</span>
                    <span><strong>Emergency?</strong> Call <a href={`tel:${siteConfig.medical?.emergencyPhone?.replace(/[^0-9]/g, '') || siteConfig.contactInfo.phone.replace(/[^0-9]/g, '')}`} class="text-[color:var(--color-primary)] hover:underline">{siteConfig.medical?.emergencyPhone || siteConfig.contactInfo.phone}</a> for same-day appointments.</span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

