        <div class="max-w-4xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-[color:var(--color-foreground)] mb-4">
              Send Us a Message
            </h2>
            <p class="text-lg text-[color:var(--color-foreground)]/70 max-w-2xl mx-auto">
              Have a question? We'd love to hear from you. Fill out the form below and we'll respond as soon as possible.
            </p>
          </div>

          <div class="bg-[color:var(--color-background)] rounded-2xl shadow-lg p-8 md:p-10">
            <ContactForm config={siteConfig} />
          </div>
        </div>
      </section>
    </main>

    <!-- Elegant Footer -->
    <footer class="bg-[color:var(--color-foreground)] text-white py-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8 mb-8">
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-[color:var(--color-primary)] rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <span class="font-serif text-xl font-semibold">{siteConfig.businessName}</span>
            </div>
            <p class="text-white/70 text-sm leading-relaxed">
